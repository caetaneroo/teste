        print(f"   ğŸ“Š UtilizaÃ§Ã£o: {status['utilization_percent']:.1f}%")
        print(f"   â±ï¸ Tempo no minuto: {status['time_in_minute']:.1f}s")
        print(f"   ğŸ”„ Total de esperas: {status['total_waits']}")
        print(f"   â³ Tempo total de espera: {status['total_wait_time']:.1f}s")
